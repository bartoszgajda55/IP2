<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quizapp.ip2.Activity.QuizEndActivity"
    android:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/imgQuiz"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_star"
        android:tintMode="src_in"
        android:tint="@color/colorLight"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgQuiz"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:scaleY="8"
        android:progressTintMode="src_in"
        android:progressTint="@color/colorLight"/>

    <ProgressBar
        android:id="@+id/ratingBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgQuiz"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:scaleY="8"
        android:progressTintMode="src_in"
        android:progressTint="@color/colorIntroGreen"/>

    <TextView
    android:id="@+id/message"
    android:layout_below="@+id/ratingBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:theme="@style/textTitle"
    android:layout_centerHorizontal="true"
    android:textColor="@color/colorLight"/>

    <TextView
        android:id="@+id/messageXP"
        android:layout_below="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:theme="@style/textTitle"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorLight"/>

    <Button
        android:id="@+id/btnEnd"
        android:layout_below="@+id/messageXP"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/buttonPrimary"
        android:layout_centerHorizontal="true"
        android:text="End"/>
</RelativeLayout>
